                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnActionEmail"/>
                                    </StackLayout.GestureRecognizers>
                                    <customLabel:CustomLabel 
                                        IsUnderlined="True" 
                                        x:Name="txtUserEmail"
                                        FontSize="18" 
                                        HorizontalTextAlignment="Start" 
                                        HorizontalOptions="FillAndExpand" 
                                        VerticalTextAlignment="Center"   
                                         
                                         
                                        Text="{Binding Email}" 
                                    />
                                </StackLayout>-->
